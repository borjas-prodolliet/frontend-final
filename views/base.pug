doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
    title Natours | #{title}
  body
    // HEADER
    // de esta manera incluimos otros archivos pug dentro de nuestro template base
    include _header
    // CONTENT
    // aqui indicamos el bloque de content, pug va a reemplazar aqui
    // con el contenido del template que extienda
    block content
      h1 This is a placeholder heading
    // FOOTER
    include _footer